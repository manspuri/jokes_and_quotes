<div id='post-container'>
	<div class='post-text'><%= @post.text %></div>
	<div class="post-author-details">
		<span class='post-author'><%= @post.user.username %></span>
		<span class='post-date small-font'><%= @post.created_at %></span>
		<span class='post-type'><%= @post.post_type %></span>
	</div>
	<textarea data-id='<%= @post.id %>' id='main-add-comment-input' class='hidden'></textarea>
	<br><div class='main_add_comment_btn'>Add Comment</div>
	<% if @post.editable? && @post.author == current_user %>
		<%= link_to "Edit post", edit_post_path(@post), class: 'edit_post_button' %>
	<% end %>
	<div class='post-comments'>
	</div>
</div>
